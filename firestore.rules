rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // User profiles collection
    match /user_profiles/{userId} {
      // Users can read their own profile (userId must match auth.uid)
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile (but not create - that's done via API)
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // Only server/admin can create profiles (via API routes)
      allow create: if false;
      
      // Users cannot delete their own profiles
      allow delete: if false;
    }
    
    // Slugs collection - read-only for authenticated users
    match /slugs/{slugId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via API routes
    }
    
    // Joydrops collection
    match /joydrops/{joydropId} {
      // Users can read all joydrops (for leaderboards, maps, etc.)
      allow read: if isAuthenticated();
      
      // Only server/admin can create joydrops (via API routes)
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
    
    // Organization members collection
    match /organization_members/{memberId} {
      // Users can read if they're part of the organization
      allow read: if isAuthenticated();
      
      // Only server/admin can write (via API routes)
      allow write: if false;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
